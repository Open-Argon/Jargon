let getInitials(name) = do
    name = name.upper()
    namesplit = name.split(" ")
    for (i from 0 to namesplit.length) namesplit[i] = namesplit[i][0]
    return namesplit.join("")

name = "william bell"
term.log(getInitials(name))
term.log(name)

let addLastName(name) = name.append(" Bell")

name = "William"
addLastName(name)
term.log(name)